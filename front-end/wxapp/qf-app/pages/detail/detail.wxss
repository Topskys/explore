/* pages/detail/detail.wxss */
.swiper{
    height: 750rpx;
    height: 400rpx;
}

.swiper .image{
    width: 100%;
    height: 400rpx;
}

.detail-tabbar{
    display: flex;
    align-items: center;
    text-align: center;
    padding: 20rpx;
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    border-top: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
}

.detail-tabbar>view{
    flex: 1;
    border-bottom: 4rpx solid #fff;
}

.detail-tabbar .active{
    border-bottom-color: red;
}

.feature{
    padding: 20rpx;
    line-height: 1.5;
}

.comment{
    padding: 20rpx;
    line-height: 1.5;
    border-bottom:1rpx solid #f5f5f5 ;
    /* 去除浮动 */
    overflow: hidden;
}

.comment .createTime{
    color: #aaa;
    font-size: 28rpx;
    float: right;
}

.good-nav{
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    text-align: center;
    color: white;
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
}

.good-nav>view{
    flex: 1;
}