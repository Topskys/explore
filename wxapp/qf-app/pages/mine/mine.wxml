<!--pages/mine/mine.wxml-->
<view class="userInfo">
    <image src="{{userInfo.avatarUrl}}" mode="widthFix" bindtap="handleExchangeAvatar"></image>
    <view>{{userInfo.nickName}}</view>
</view>


<mp-cells ext-class="my-cells">
    <mp-cell value="完善信息">
        <mp-icon slot="icon" type="field" icon="me" color="black" size="{{20}}"></mp-icon>
        <mp-icon slot="icon" type="field" icon="arrow" color="black" size="{{10}}" slot="footer"></mp-icon>
    </mp-cell>
    <mp-cell value="个性化设置">
        <mp-icon slot="icon" type="field" icon="like" color="black" size="{{20}}"></mp-icon>
        <mp-icon slot="icon" type="field" icon="arrow" color="black" size="{{10}}" slot="footer"></mp-icon>
    </mp-cell>
</mp-cells>
